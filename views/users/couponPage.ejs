<!-- Coupons -->
<div class="container">
    <div class="row">
        <% if (coupons.length === 0) { %>
        <div class="col-12">
            <h4>No coupons available at the moment.</h4>
        </div>
        <% } else { %>
        <% coupons.forEach(function(coupon) { %>
        <!-- Coupon Card -->
        <div class="col-md-6">
            <div class="card coupon-card mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">Coupon Code: <%= coupon.code %></h5>
                    <p class="card-text">Discount Amount: <%= coupon.discountAmount %></p>
                    <p class="card-text">Minimum Amount: <%= coupon.minimumAmount %></p>
                    <p class="card-text">Expires on: <%= coupon.expirationDate.toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    
                    <!-- Instead of radio buttons, use an "Apply Coupon" button -->
                    <form method="post" action="/couponget">
                        <button type="submit" name="selectedCoupon" value="<%= coupon._id %>" class="btn btn-primary-2">Apply Coupon</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>
</div>



		

