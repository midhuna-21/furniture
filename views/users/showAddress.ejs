	<!-- breadcrumb -->
	<div class="container" style="padding-bottom: 70px;">
		<h1 style="padding-top: 40px;">Manage Addresses</h1>

		<!-- Address Listing -->
		<div class="address-list">
			<!-- First Row -->
			<div class="row">

				<!-- Sample Address 1 -->
				<div class="row">
					<% for (let i=0; i < user.address.length; i++) { %>
						<div  class="col-md-6" data-id="<%=i %>">
							<div class="address-container">
								<div>
									<h4>Name: <%= user.address[i].name %>
									</h4>
									<p>Phone number: <%= user.address[i].tel %>
									</p>
									<p>City: <%= user.address[i].city %>
									</p>
									<p>State: <%= user.address[i].state %>
									</p>
									<p>Pincode: <%= user.address[i].pincode %>
									</p>
									<p>House: <%= user.address[i].address %>
									</p>
								</div>
								<div>

								

									<a href="/editaddress/<%= i %>" class="edit-address-button">Edit Address</a>


									<a href="/deleteAddress/<%= i %>" class="delete-address-button" >Delete</a>

								</div>
							</div>
						</div>
						<% } %>


				</div>


			</div>
		</div>
		<% if (user.address.length < 4) { %>
			<button class="add-button"><a href="/address" >Add Address</a></button>
		<% } else { %>
			<p>You have reached the maximum address limit. Please edit or delete an existing address to add a new one.</p>
		<% } %>
	</div>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<script>
		const addresses=document.querySelectorAll('#address')
		console.log(address)

		addresses.forEach((address,index)=>{
			
			let adIndex=address.value
			
			address.addEventListener('click',function (event) {
				localStorage.setItem('addressIndex',adIndex)
			})
			
		})
	</script>

