<section class="content-main">
    <div class="card mx-auto card-login" style="background-color: rgba(255, 255, 255, 0.6); ">
        <div class="card-body">
            <h4 class="card-title mb-4" style="color: rgb(53, 48, 48); ">Enter email</h4>
            <div class="mb-3">
                <input class="form-control" id="email" placeholder="Useremail" type="text">
                <p id="emailError" class="text-danger"></p>
            </div>
            <div class="mb-4">
                <button type="button" id="submitButton" class="btn btn-primary w-100" style="background-color:  rgb(53, 48, 48)">Enter</button>
            </div>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#submitButton').click(function () {
            let email = $("#email").val();

            $("#emailError").text("");
            if(!email) {
                $("#emailError").text("please enter email")
                console.log('error2');
                return;
            }
            if(!isValidEmail(email)){
                $('#emailError').text("please enter a valid email")
                console.log('error1');
                return;
            }
            $.ajax({
                type: 'POST',
                url: '/email',
                data: {email: email},
                success: function(response) {
                    if(response.success){
                        window.location.href ='/otp?reset=1'
                   }else{
                    $('#emailError').text(response.message);
                   }
                },
                error: function(error) {
                    console.error(error.responseText)
                }
            })

        })
        function isValidEmail(email) {
            let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email)
        }
    })
</script>
