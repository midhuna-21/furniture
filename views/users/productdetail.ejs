			addToCartButton.addEventListener("click", function () {
				// Display a SweetAlert confirmation dialog
				Swal.fire({
					position: 'center',
					icon: 'success',
					title: 'Added to cart successfully',
					showConfirmButton: false,
					timer: 1500
				});
			});
		});
	</script>

