        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Product Offers </h2>
                    <!-- <p>Add, edit or delete a Ba</p> -->
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/productOffer" method="post">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Title</label>
                                    <input type="text" name="title" placeholder="Type here" class="form-control" id="title" />
                                    <p id="titleError" class="error-message"></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea placeholder="Type here" name="description" class="form-control"></textarea>
                                    <p id="descriptionError" class="error-message"></p>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Discount price</label>
                                        <input placeholder="$" name="discount" type="text" class="form-control" required>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label for="product_slug" class="form-label"> Date</label>
                                    <input type="date" name="startDate" type="number" placeholder="Type here"
                                        class="form-control" id="startDate" required="true" />
                                        <p id="dateError" class="error-message"></p>
                                </div>
                                <div class="mb-4">
                                    <label for="product_slug" class="form-label">Expiration Date</label>
                                    <input type="date" name="endDate" type="number" placeholder="Type here"
                                        class="form-control" id="endDate" required="true" />
                                        <p id="expirationDateError" class="error-message"></p>
                                </div>
                               
                               
                                <div class="d-grid">
                                    <button class="btn btn-primary" type="submit">Create</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                           
                                            <th>No</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Date</th>
                                            <th>ExpirationDate</th>
                                            <th>Discount</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% offers.forEach((offer, index)=>{ %>
                                            <tr>
                                              <td><%= index + 1 %></td>
                                              
                                              <td><%= offer.title %></td>
                                              <td><%= offer.description %></td>
                                              <td><%= offer.startDate.toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                                              <td><%= offer.endDate.toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                                              <td><%= offer.discount %></td>
                                              <td>
                                                    <a href="" class="btn btn-danger p-1">Unlist</a>
                                          
                                                    <a href="" class="btn btn-success p-1">List</a>
                                              
                                                
                                              </td>
                                            </tr>
                                             <% }); %>                                   
                                    </tbody>
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
