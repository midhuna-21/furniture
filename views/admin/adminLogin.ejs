    <link rel="icon" href="/assets/imgs/theme/Black White Logo.png">
    <link href="/assets/css/main.css" rel="stylesheet" type="text/css" />
</head>
<style>
    .content-main {
        /* Set the background image */
        background-image: url('/images/logui2.jpg');

        /* Adjust background properties as needed */
        background-size: cover;
        /* Cover the entire section */
        background-position: center;
        /* Center the background image */
        background-repeat: no-repeat;
        /* Prevent image repetition */
        max-width: 100%;
        max-height: 100%;
        height: 100vh;
        /* Add additional styling */
        padding-top: 150px;
        /* Increase the top padding */
        padding-bottom: 100px;
        /* Increase the bottom padding */
        padding-left: 20px;
        /* Optional: Adjust left padding if needed */
        padding-right: 20px;

    }

    * {
        margin: 0;

    }

    .brand-header {
        text-align: center;
        font-family: CustomFont, sans-serif;
        /* Use the custom font or a fallback sans-serif font */
    }

    .slogan {
        text-align: center;
        font-style: italic;
        color: #555;
        /* Customize the color to your preference */
    }

    .login-title {
        text-align: center;
    }

    .brand-container {
        height: 65px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-login {
        margin-top: 20px;

        background-color: rgba(161, 153, 149, 0.6);
        margin-bottom: 30px;
    }
</style>

<body>
    <section class="content-main">
        <div class="brand-container">
            <div class="brand-header"
                style="color: white; font-size: 20px; ">
                <!-- Brand name content -->
                <h3><span>Halang.</span></h3>
            </div>
        </div>

        <div class="card mx-auto card-login " style="background-color: rgba(255, 255, 255, 0.6); ">
            
            <form action="/admin/login" id="loginForm">
                <div class="card-body">
                    <h4 class="card-title mb-4"  style="color: rgb(53, 48, 48); font-family: sans-serif; font-size: 24px; font-weight: bold; text-align: center; text-transform: uppercase;">
                        Sign in</h4>
                    <div class="mb-3">
                        <input class="form-control" name="email" placeholder="Useremail" type="text" autocomplete="off">
                        <p id="emailError" class="error-message"style="color: red;"></p>
                    </div>
                    <div class="mb-3">
                        <input class="form-control" name="password" placeholder="Password" type="password"
                            autocomplete="new-password">
                        <p id="passwordError" class="error-message"style="color: red;"></p>
                    </div>
                    <div class="mb-3">
                        <!-- <a href="#" class="text-center " style="color: black;">Forgot password?</a> -->
                    </div>
                    <div class="mb-4">
                        <button type="button" onclick="submitForm()" class="btn btn-primary w-100 bg-dark" style="background-color:  rgb(53, 48, 48)"> sign in </button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!--script-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function submitForm() {
            if (validateform()) { // Assuming validateform() function is defined correctly
                const email = $("input[name='email']").val().trim();
                const password = $("input[name='password']").val().trim();

                $.ajax({
                    type: "POST",
                    url: "/admin/login",
                    data: {
                        email: email,
                        password: password
                    },
                    success: function (response) {
                        if(response.success){
                            
                            window.location.href = "/admin/dashboard";
                        }else {
                            $("#emailError").text(response.email);
                            $("#passwordError").text(response.password);
                        }            
                    },
                    error: function (error) {
                        console.error("Error:", error);
                    }
                });
            }
            function validateform() {
                let emailInput = document.getElementsByName("email")[0];
                let passwordInput = document.getElementsByName("password")[0];
                let email = emailInput.value.trim();
                let password = passwordInput.value.trim();
                let isValid = true;

                document.getElementById("emailError").textContent = "";
                document.getElementById("passwordError").textContent = "";

                if(email === ""){
                    document.getElementById("emailError").textContent = "please enter email";
                    isValid = false;
                }else{
                    let emailRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;
                    if(!emailRegex.test(email)){
                        document.getElementById("emailError").textContent = "please enter a valid email";
                        isValid = false;
                    }
                }
                if(password === "") {
                    document.getElementById("passwordError").textContent = "please enter password";
                    isValid = false;
                }
                return isValid;
            }

        }
    </script>
    <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assets/js/main.js" type="text/javascript"></script>
</body>

</html>